<Shell
    x:Class="TimeTracker.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TimeTracker.Mobile.Views"
    xmlns:resx="clr-namespace:TimeTracker.Mobile.Resources.Strings">

    <!-- LoginPage (toujours présent, invisible une fois connecté) -->
    <FlyoutItem Title="{x:Static resx:AppResources.Login_Flyout_Title}" Route="LoginPage" IsVisible="False">
        <ShellContent
            Title="{x:Static resx:AppResources.Login_Flyout_Title}"
            ContentTemplate="{DataTemplate views:LoginPage}" />
    </FlyoutItem>
</Shell>
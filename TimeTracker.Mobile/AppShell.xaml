<Shell
  x:Class="TimeTracker.Mobile.AppShell"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TimeTracker.Mobile.Views">

    <!-- on pourra naviguer vers ces routes par code, pas d'initial ContentTemplate -->
    <FlyoutItem Title="Connexion">
        <ShellContent
        Title="Connexion"
        ContentTemplate="{DataTemplate views:LoginPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Accueil">
        <ShellContent
            Title="Accueil"
            ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>
    <FlyoutItem Title="DashBoard">
        <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate views:AdminDashboardPage}" />
    </FlyoutItem>

</Shell>
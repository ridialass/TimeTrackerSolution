<Shell
    x:Class="TimeTracker.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TimeTracker.Mobile.Views"
    FlyoutBehavior="Disabled">

    <!-- Page de démarrage -->
    <ShellContent
        Title="Login"
        Route="LoginPage"
        ContentTemplate="{DataTemplate views:LoginPage}" />

    <FlyoutItem Title="Accueil" Route="HomePage" IsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Dashboard" Route="AdminDashboardPage" IsVisible="False">
        <ShellContent ContentTemplate="{DataTemplate views:AdminDashboardPage}" />
    </FlyoutItem>
</Shell>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TimeTracker.Mobile.ViewModels"
    x:Class="TimeTracker.Mobile.Views.HomePage"
    Title="Home">
    <ContentPage.ToolbarItems>
        <ToolbarItem
            Text="Logout"
            Order="Primary"
            Priority="0"
            Command="{Binding LogoutCommand}" />
    </ContentPage.ToolbarItems>

    <VerticalStackLayout
      Padding="40"
      Spacing="20"
      VerticalOptions="Center">

        <Button
          Text="Start Session"
          Command="{Binding StartSessionCommand}" />

        <Button
          Text="End Session"
          Command="{Binding EndSessionCommand}" />

        <Button
          Text="History"
          Command="{Binding GoToHistoryCommand}" />

        <Button
          Text="Admin Dashboard"
          Command="{Binding GoToAdminDashboardCommand}"
          BackgroundColor="#333"
          TextColor="White"
          IsVisible="{Binding IsCurrentUserAdmin}" />

    </VerticalStackLayout>
</ContentPage>
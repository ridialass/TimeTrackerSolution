<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TimeTracker.Mobile.Views.AdminDashboardPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TimeTracker.Mobile.ViewModels"
    Title="Admin Dashboard">



    <StackLayout Padding="16">

        <Label Text="Admin Dashboard" FontAttributes="Bold" FontSize="Large" HorizontalOptions="Center" />

        <Button Text="Refresh" Command="{Binding LoadUsersCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />

        <ListView ItemsSource="{Binding Users}" IsPullToRefreshEnabled="True"
                  RefreshCommand="{Binding LoadUsersCommand}" IsRefreshing="{Binding IsBusy}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding UserName}" Detail="{Binding Role}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}" />

        <Button Text="Logout" Command="{Binding LogoutCommand}" />

    </StackLayout>
</ContentPage>
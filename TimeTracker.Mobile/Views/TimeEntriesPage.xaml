<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TimeTracker.Mobile.Views.TimeEntriesPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TimeTracker.Mobile.ViewModels"
    Title="Time Entries">


    <StackLayout Padding="16">

        <Button Text="Refresh" Command="{Binding LoadTimeEntriesCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />

        <ListView ItemsSource="{Binding TimeEntries}" IsPullToRefreshEnabled="True"
                  RefreshCommand="{Binding LoadTimeEntriesCommand}" IsRefreshing="{Binding IsBusy}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding StartTime, StringFormat='Start: {0:yyyy-MM-dd HH:mm}'}" />
                            <Label Text="{Binding EndTime, StringFormat='End: {0:yyyy-MM-dd HH:mm}'}" />
                            <Label Text="{Binding SessionType}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyConverter}}" />

    </StackLayout>
</ContentPage>
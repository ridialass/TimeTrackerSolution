<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="TimeTracker.Mobile.Views.RegistrationPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TimeTracker.Mobile.ViewModels"
    Title="User Registration">

    <ScrollView>
        <StackLayout Padding="16" Spacing="8">

            <Entry Placeholder="Username" Text="{Binding Username}" />
            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
            <Entry Placeholder="Email" Text="{Binding Email}" />
            <Entry Placeholder="First Name" Text="{Binding FirstName}" />
            <Entry Placeholder="Last Name" Text="{Binding LastName}" />
            <Entry Placeholder="Town" Text="{Binding Town}" />
            <Entry Placeholder="Country" Text="{Binding Country}" />
            <Entry Placeholder="Role" Text="{Binding Role}" />

            <Button Text="Register" Command="{Binding RegisterCommand}" IsEnabled="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}" />

            <Label Text="{Binding RegistrationSuccess}" TextColor="Green" IsVisible="{Binding RegistrationSuccess, Converter={StaticResource StringNotNullOrEmptyConverter}}" />
            <Label Text="{Binding RegistrationError}" TextColor="Red" IsVisible="{Binding RegistrationError, Converter={StaticResource StringNotNullOrEmptyConverter}}" />

        </StackLayout>
    </ScrollView>
</ContentPage>
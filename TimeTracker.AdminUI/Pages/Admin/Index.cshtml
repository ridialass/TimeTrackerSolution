@page
@model TimeTracker.AdminUI.Pages.Admin.IndexModel
@using TimeTracker.Core.DTOs
@using TimeTracker.Core.Enums
@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4 text-primary">@ViewData["Title"]</h2>

<div class="row g-4">
    <!-- 1. Create New User Button -->
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <h5 class="card-title mb-3">Nouvel utilisateur</h5>
                <a asp-page="/Account/Register" class="btn btn-lg btn-success">
                    <i class="bi bi-person-plus-fill me-2"></i>Créer un utilisateur
                </a>
            </div>
        </div>
    </div>

    <!-- 2. Filter Sessions by User -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <strong>Filtrer les sessions</strong>
            </div>
            <div class="card-body">
                <form method="post" asp-page-handler="LoadSessions" class="row gx-2 gy-3 align-items-end">
                    <div class="col-12">
                        <label asp-for="SelectedEmployeeId" class="form-label">Employé</label>
                        <select asp-for="SelectedEmployeeId" class="form-select">
                            <option value="0">-- Sélectionner --</option>
                            @foreach (var emp in Model.AllEmployees)
                            {
                                <option value="@emp.Id">@emp.Username</option>
                            }
                        </select>
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Charger</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- 3. Sessions for Selected User -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    Sessions pour&nbsp;
                    @Model.AllEmployees.FirstOrDefault(e => e.Id == Model.SelectedEmployeeId)?.Username
                </h5>
            </div>
            <div class="card-body">
                @if (Model.FilteredEntries != null && Model.FilteredEntries.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Type</th>
                                    <th>Début</th>
                                    <th>Fin</th>
                                    <th>Durée</th>
                                    <th>Déplacement</th>
                                    <th>Temps déplacement</th>
                                    <th>Adresse début</th>
                                    <th>Adresse fin</th>
                                    <th>Dîner payé</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var s in Model.FilteredEntries)
                                {
                                    <tr>
                                        <td>@s.SessionType</td>
                                        <td>@s.StartTime.ToLocalTime().ToString("g")</td>
                                        <td>@(s.EndTime.HasValue? s.EndTime.Value.ToLocalTime().ToString("g") : "—")</td>
                                        <td>@(s.WorkDuration.HasValue ? $"{(int)s.WorkDuration.Value.TotalHours}h{s.WorkDuration.Value.Minutes}m" : "—")</td>
                                        <td>@(s.IncludesTravelTime ? "Oui" : "Non")</td>
                                        <td>@(s.TravelTimeEstimate.HasValue? s.TravelTimeEstimate.Value.ToString(@"hh\:mm") : "—")</td>
                                        <td>@s.StartAddress</td>
                                        <td>@s.EndAddress</td>
                                        <td>@s.DinnerPaid</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <form method="post" asp-page-handler="ExportCsv" class="mt-3 text-end">
                        <button type="submit" class="btn btn-info">
                            <i class="bi bi-download me-1"></i>Exporter CSV
                        </button>
                    </form>
                }
                else
                {
                    <p class="text-muted mb-0">Aucune session à afficher.</p>
                }
            </div>
        </div>
    </div>
</div>

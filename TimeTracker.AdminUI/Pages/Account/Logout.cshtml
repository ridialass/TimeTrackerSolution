@page
@using Microsoft.Extensions.Localization
@using TimeTracker.AdminUI.Resources
@inject IStringLocalizer<PagesTexts> Localizer
@model TimeTracker.AdminUI.Pages.Account.LogoutModel
@{
    Layout = null;
    ViewData["Title"] = Localizer["LogoutTitle"];
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h2>@ViewData["Title"]</h2>
        <p>@Localizer["LogoutMessage"]</p>
        <a href="/" class="btn btn-primary">@Localizer["BackToHomeButton"]</a>
    </div>
</body>
</html>